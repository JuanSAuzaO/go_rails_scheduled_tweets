<div class="row justify-content-md-center mt-3">
  <h1 class="text-center">Sign in to Twitter practice app!</h1>
  <%= form_with model: @user, url: users_sign_in_path, html: { class: "col-6" }  do |f| %>
    <div class="mb-3">
      <%= f.label :email, class:"form-label" %>
      <%= f.text_field :email, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class:"form-label" %>
      <%= f.password_field :password, class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= link_to "Forgot your password?", users_password_reset_path %>
    </div>
    <div class="mb-3">
      <%= f.submit "Sign in" , class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
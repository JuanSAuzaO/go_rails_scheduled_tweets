<h1>Here are your linked twitter accounts</h1>

<%= button_to "Connect twitter", "/auth/twitter", method: :post, class: "btn btn-primary mb-3 ms-3" %>

<ul>
  <% @twitter_accounts.each do |twitter_account| %>
    <li class="d-flex align-items-center">
      <img src="<%= twitter_account.image %>" class="me-3"/>  
      <%= link_to  twitter_account.username, "https://twitter.com/#{twitter_account.username}", class:"me-3"%>
      <%= link_to "Disconnect your account", "/twitter_accounts/#{twitter_account.id}", method: :delete, class:"btn btn-danger" %>
    </li>
  <% end %>
</ul>